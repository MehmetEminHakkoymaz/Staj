<UserControl x:Class="WpfApp1.EditPages.EditpHCascade.Acid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.EditPages.EditpHCascade"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="750" Background="#E7ECEF">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0">
            <!-- Upper TextBox with rounded top corners and red background -->
            <Border Background="#c74d4d" CornerRadius="5,5,0,0" Width="120" Height="40" Opacity="1" BorderThickness="1" BorderBrush="DarkGray">
                <Grid>
                    <Label Content="RPM" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="25" Margin="0,-10,0,0" Foreground="Black" 
                           FontWeight="Regular"/>
                    <Label Content="(0-1400)" HorizontalAlignment="Center" VerticalAlignment="Bottom" Opacity="0.6" FontSize="15" Margin="0,0,0,-6" Foreground="Black" 
                           FontWeight="Regular"/>
                    <!--<TextBox Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>-->
                </Grid>
            </Border>

            <!-- Lower TextBox with rounded bottom corners and black background -->
            <Border Background="#E7ECEF" CornerRadius="0,0,5,5" Width="120" Height="40" Margin="0,0,0,0" Opacity="1" 
                    BorderBrush="DarkGray" BorderThickness="1">
                <TextBox Background="Transparent" BorderThickness="0" Foreground="Black" VerticalContentAlignment="Center" 
                         HorizontalContentAlignment="Center" Text="PID" FontSize="25" FontWeight="Regular"/>
            </Border>
        </StackPanel>    
    </Grid>
</UserControl>
